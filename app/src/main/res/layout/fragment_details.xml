<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".ui.fragments.DetailsPasswordFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/passwordDetailsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password_details_screen_label"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <ImageButton
            android:id="@+id/backHome_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="14dp"
            android:scaleType="fitStart"
            android:src="@drawable/back_btn" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <!-- Text fields -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="@drawable/round_back_white_10_20">

                <!-- Service title -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/CustomOutlineBox"
                        app:counterEnabled="true"
                        app:counterMaxLength="24"
                        android:hint="@string/enter_service_title_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/enter_service_title_field"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLength="24"
                            android:textColor="#FFFFFF"
                            android:textStyle="normal" />
                    </com.google.android.material.textfield.TextInputLayout>


                </RelativeLayout>

                <!-- Login -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/CustomOutlineBox"
                        app:counterEnabled="true"
                        app:counterMaxLength="24"
                        android:hint="@string/enter_login_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:inputType="text"
                            android:maxLength="24"
                            android:textStyle="normal"
                            android:id="@+id/enter_login_field"/>
                    </com.google.android.material.textfield.TextInputLayout>


                </RelativeLayout>

                <!-- Details -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/CustomOutlineBox"
                        app:counterEnabled="true"
                        app:counterMaxLength="54"
                        android:hint="@string/enter_password_details_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:inputType="text"
                            android:maxLength="54"
                            android:textStyle="normal"
                            android:id="@+id/enter_details_field"/>
                    </com.google.android.material.textfield.TextInputLayout>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <Spinner
                        android:id="@+id/spinnerFolders"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/spinner_bg"
                        android:stateListAnimator="@drawable/spinner_sla" />
                </RelativeLayout>
            </LinearLayout>
            <!-- Password field -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="@drawable/round_back_white_10_20">

                <!-- Password -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/PasswordCustomOutlineBox"
                        app:counterEnabled="true"
                        app:counterMaxLength="100"

                        android:hint="@string/enter_password_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textColor="#FFFFFF"
                            android:textStyle="normal"
                            android:maxLength="100"
                            android:id="@+id/enter_password_field"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </RelativeLayout>

                <!-- Generate password button -->
                <Button
                    android:id="@+id/generate_password_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/generate_btn"
                    android:textColor="@color/settings_notifications"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:background="@drawable/update_password_btn"
                    android:textAllCaps="false"/>


            </LinearLayout>
            <!-- Save password -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="15dp"
                android:background="@drawable/round_back_white_10_20">

                <!-- Update password button -->
                <Button
                    android:id="@+id/update_password_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/update_btn"
                    android:textColor="@color/settings_languages"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:background="@drawable/save_password_btn"
                    android:textAllCaps="false"/>


                <!-- Delete password button -->
                <Button
                    android:layout_marginTop="10dp"
                    android:id="@+id/delete_password_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/delete_btn"
                    android:textColor="@color/settings_security"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:background="@drawable/delete_password_btn"
                    android:textAllCaps="false"/>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</FrameLayout>